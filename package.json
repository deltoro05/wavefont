{
  "name": "wavefont",
  "version": "3.0.0",
  "description": "Typeface for visualizing waveform data",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ufo && npm-run-all --parallel build-otf build-ttf && npm run build-woff2",
    "build-ufo": "plop build-ufo wavefont100",
    "build-otf": "npm-run-all build-masterotfs build-vf",
    "build-masterotfs": "buildmasterotfs --mkot -r,-omitMacNames -d source/wavefont100/wavefont.designspace",
    "build-vf": "buildcff2vf --omit-mac-names -c -k -d source/wavefont100/wavefont.designspace -o ./wavefont.otf",
    "patch-tables": "sfntedit -a cmap=cmap-13.bin wavefont.otf",
    "build-ttf": "fontmake --no-optimize-gvar -m source/wavefont100/wavefont.designspace -o variable --output-path ./wavefont.ttf",
    "subroutinize": "shx cp ./wavefont.otf ./wavefont.min.otf && tx -cff2 +S +b -o ./table.CFF2 -f ./wavefont.otf && sfntedit -a CFF2=./table.CFF2 ./wavefont.min.otf",
    "build-woff2": "shx rm -f ./wavefont.woff2 && fonttools ttLib.woff2 compress wavefont.otf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-vis/wavefont.git"
  },
  "keywords": [
    "sound",
    "audio",
    "datavis",
    "opentype",
    "waveform",
    "spectrum",
    "fft"
  ],
  "author": "Dmitry Iv <dfcreative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-vis/wavefont/issues"
  },
  "homepage": "https://github.com/a-vis/wavefont#readme",
  "devDependencies": {
    "dedent": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "plop": "^3.1.0",
    "shx": "^0.3.3"
  }
}
